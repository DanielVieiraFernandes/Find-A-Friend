generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Specie {
  CAT
  DOG
}

enum Role {
  NOAUTHORIZED
  ADMIN
}

model Pet {
  id           String    @id @default(uuid())
  name         String
  specie       Specie
  breed        String
  description  String
  age          Int
  adoptionDate DateTime?
  org          Org       @relation(fields: [org_id], references: [id])
  org_id       String
  created_at   DateTime  @default(now())

  @@map("pets")
}

model Org {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  phone         String    @unique
  password_hash String
  description   String?
  created_at    DateTime  @default(now())
  role          Role      @default(NOAUTHORIZED)
  Pets          Pet[]
  location      Location?

  @@map("orgs")
}

model Location {
  id      String @id @default(uuid())
  city    String
  address String
  org     Org    @relation(fields: [org_id], references: [id])
  org_id  String @unique

  @@map("locations")
}
