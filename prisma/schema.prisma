generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Specie {
  CAT
  DOG
}

enum Role {
  NOAUTHORIZED
  ADMIN
}

model Pet {
  id           String     @id @default(uuid())
  name         String
  specie       Specie
  breed        String
  description  String
  age          Int
  adoptionDate DateTime?
  org          Org        @relation(fields: [org_id], references: [id])
  org_id       String
  created_at   DateTime   @default(now())
  Location     Location[]

  @@map("pets")
}

model Location {
  id     String @id @default(uuid())
  city   String
  addres String
  org    Org    @relation(fields: [org_id], references: [id])
  org_id String
  pets   Pet    @relation(fields: [pet_id], references: [id])
  pet_id String
}

model Org {
  id          String     @id @default(uuid())
  name        String
  address     String
  phone       String
  description String?
  created_at  DateTime   @default(now())
  role        Role       @default(NOAUTHORIZED)
  Pets        Pet[]
  Location    Location[]

  @@map("orgs")
}
